{
  "name": "agent-scope",
  "version": "0.1.0",
  "description": "CLI tool for configuring and orchestrating AI agents with explicit roles, scoped context, and OpenSpec-compatible specifications",
  "author": "Mitriyweb <mitriyweb@gmail.com>",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/mitriyweb/agent-scope"
  },
  "bin": {
    "agent-scope": "./bin/agent-scope"
  },
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "coverage:check": "node scripts/check-coverage.js",
    "coverage:save": "npm run test:coverage && node scripts/save-coverage.js",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "lint:md": "markdownlint-cli2 --fix \"**/*.md\"",
    "lint:js": "eslint --fix .",
    "lint": "npm run format && npm run lint:md && npm run lint:js",
    "knip": "knip",
    "audit": "npm audit --audit-level=moderate",
    "precommit": "npm run build && npm run test:coverage && node scripts/precommit-coverage.js && npm run lint && npm run knip && npm run audit",
    "prepare": "prek install",
    "backlog:validate": "node scripts/validate-backlog-roadmap.js",
    "backlog:sync": "node scripts/backlog-sync-runner.js",
    "backlog:sync:dry-run": "node scripts/backlog-sync-runner.js --dry-run",
    "backlog:create": "node scripts/backlog-create-runner.js --interactive",
    "backlog:create:from-issue": "node scripts/backlog-create-runner.js --from-issue --issue",
    "backlog:create:quick": "node scripts/backlog-create-runner.js --quick",
    "roadmap:sync-status": "node scripts/sync-roadmap-status.js"
  },
  "dependencies": {
    "commander": "^14.0.2",
    "js-yaml": "^4.1.1",
    "tsconfig-paths": "4.2.0"
  },
  "devDependencies": {
    "@j178/prek": "0.2.24",
    "@types/jest": "29.5.11",
    "@types/js-yaml": "^4.0.9",
    "@types/node": "25.0.3",
    "@typescript-eslint/eslint-plugin": "6.16.0",
    "@typescript-eslint/parser": "6.16.0",
    "eslint": "8.56.0",
    "jest": "29.7.0",
    "knip": "5.38.2",
    "markdownlint-cli2": "0.20.0",
    "prettier": "3.7.4",
    "ts-jest": "29.1.1",
    "typescript": "5.3.3"
  }
}
